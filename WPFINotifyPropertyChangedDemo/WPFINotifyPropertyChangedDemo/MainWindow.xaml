<Window x:Class="WPFINotifyPropertyChangedDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFINotifyPropertyChangedDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Label Content="First Name:" Canvas.Left="103" Canvas.Top="68"></Label>
        <TextBox Width="250" Height="20" Canvas.Left="209" Canvas.Top="68" Text="{Binding Path=Fname,Mode=TwoWay}"></TextBox>

        <Label Content="Last Name:" Canvas.Left="103" Canvas.Top="113"></Label>
        <TextBox Width="250" Height="20" Canvas.Left="209" Canvas.Top="113" Text="{Binding Path=Lname,Mode=TwoWay}"></TextBox>

        <Label Content="Full Name:" Canvas.Left="103" Canvas.Top="158"></Label>
        <TextBox Width="250" Height="20" Canvas.Left="209" Canvas.Top="158" Text="{Binding Path=FullName,Mode=TwoWay}"></TextBox>
    </Canvas>
</Window>
